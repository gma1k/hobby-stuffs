<html>
<head>
  <!-- Link the CSS file -->
  <%= stylesheet_link_tag "style" %>

  <!-- Link the JS file -->
  <%= javascript_include_tag "script" %>
</head>
<body>
  <!-- Write the HTML code here -->
  <!-- A button to rotate the image -->
  <button id="rotate-button">Rotate</button>

  <!-- A canvas to display the image -->
  <canvas id="image-canvas"></canvas>

  <!-- A form to upload an image and apply a grayscale filter -->
  <%= form_with url: "/photos/grayscale", method: "post", multipart: true do |form| %>
    <%= form.file_field :image %>
    <%= form.submit "Grayscale" %>
  <% end %>
</body>
</html>
